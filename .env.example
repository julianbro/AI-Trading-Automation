# Exchange API Configuration
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here
EXCHANGE_NAME=binance  # or any ccxt supported exchange

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4  # or gpt-3.5-turbo, etc.
LLM_TEMPERATURE=0.1  # Low temperature for consistency

# Trading Configuration
PAPER_TRADING=true  # Set to false for real trading
DEFAULT_SYMBOL=BTC/USDT
TIMEFRAMES=1d,4h,15m,5m

# Risk Management
MAX_TRADES_PER_DAY=5
MAX_RISK_PER_DAY=10.0  # Percentage
MAX_DRAWDOWN=20.0  # Percentage
COOLDOWN_AFTER_LOSSES=3  # Number of consecutive losses

# Logging
LOG_LEVEL=INFO
LOG_FILE=trading_system.log
